@model GussmannTechnologyWebsite.Models.HomeTbl

@{
    ViewBag.Title = "AddImageHome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: whitesmoke;
    }
</style>
<div class="col-md-12" style="margin-left:5%;height:250px; width:90%; border-color:wheat; border-style:solid;border-top-color:white; background-color:white;">


    @using (Html.BeginForm("AddImageHome", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="col-md-12" style="margin-top:5%">
                <div class="col-md-4">
                 100%   @Html.RadioButtonFor(m => m.Size, 100)
                  50%  @Html.RadioButtonFor(m => m.Size, 50)
                </div>
                <div class="col-md-4" style="background-color:darkred; color:white">
                    <center><h4>Upload Image</h4></center>
                </div>
                <div class="col-md-4">

                </div>
            </div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="col-md-12" style="margin-top:10%;">
                <div class="col-md-4">

                </div>
                <div class="col-md-4">
                    <div class="form-group">

                        @if (ViewBag.message != null)
                        {
                            @ViewBag.message
                        }

                     

                        <div class="col-md-10">
                            <input type="file" name="ImageFile" required />
                            @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Upload" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                <div class="col-md-4">

                </div>

            </div>


        </div>
    }

    <div>
        @*@Html.ActionLink("Back to List", "Index")*@
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>